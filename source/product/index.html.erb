<% content_for :pagehead do %>
<div class="content featured-content-grad">
  <div class="container">
    <div class="col9 featured-content-textarea pull-right">
      <div class="featured-content-textarea-inner">
        <h1>Euclid Analytics answers your toughest marketing and operations challenges</h1>
        <p class="large-text">with unprecedented insights into real-world shopper behavior. Our breakthrough analytics transform smartphone signals into recommendations for optimizing traffic, loyalty, and engagement. Get the complete picture of how shoppers interact with your stores - over time and across all of your locations.</p>


        <ul class="icon-button-list">
          <li><%= link_to 'Solutions', '/product/solutions.html', :id=>'solutionsbtn' %></li>
          <li><%= link_to 'Dashboard', '/product/dashboard.html', :id=>'dashboardbtn' %></li>
          <li><%= link_to 'How it Works', '/product/how.html', :id=>'howbtn' %></li>
          <li><%= link_to 'Setup', '/product/setup.html', :id=>'setupbtn' %></li>
          <li><%= link_to 'Security', '/product/security.html', :id=>'securitybtn' %></li>
        </ul>
      </div>

    </div>
  </div>
</div>
<% end %>



<script type="text/javascript">
  $('.tab-link').click(function(){
    $('.tab-link').removeClass('selected');
    $(this).addClass('selected');
    $("#tabs > li").addClass('hide');
    $("#" + $(this).attr('data-target')).removeClass('hide');
  })
</script>

