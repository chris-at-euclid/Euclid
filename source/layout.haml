!!!
%html{:lang => "en"}
  %head
    / https://github.com/czarneckid/twitter-bootstrap-examples-haml/blob/master/views/starter-template.haml
    %meta{:charset => "utf-8"}/
    = yield_content :head
    %meta{:name => "description", :content => "Online Analytics for the Offline World."}/
    %meta{:name => "keywords", :content => "Analytics Retail SaaS"}/
    %meta{:name => "author", :content => "Euclid Inc. Copyright 2010 - 2012. All rights reserved."}/
    / HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / styles
    %link{:href => "/stylesheets/bootstrap.css", :rel => "stylesheet"}/
    :css
      body {
        padding-top: 92px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    %link{:href => "/stylesheets/site.css", :rel => "stylesheet"}/
    / fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    / %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    / %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    / %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => "/"} 
            %img{"src" => "images/euclid_logo.png"}
          .row.pull-right.span4{:id => "customer_row"}
            .pull-right
              %a{:href => "/customer_login.html", :id => "customer_login"} Customer Login
              %a.btn.btn-mini{:href => "/get_started.html", :id => "get_started"} Get Started
          .row.pull-right.span8{:id => "page_row"}   
            %ul.nav.pull-right{:id => "menu_items"}     
              %li{:class => @page_name == 'product_tour' ? 'active' : ''}
                %a{:href => "/product_tour.html"} Product Tour
              %li{:class => @page_name == 'out_customers' ? 'active' : ''}
                %a{:href => "/our_customers.html"} Our Customers
              %li{:class => @page_name == 'privacy' ? 'active' : ''}
                %a{:href => "/privacy.html"} Privacy
              %li{:class => @page_name == 'about' ? 'active' : ''}
                %a{:href => "/about.html"} About
    .container
    = yield
    / JavaScript
    / Placed at the end of the document so the pages load faster
    %script{:src => "/javascript/jquery.js"}
    %script{:src => "/javascript/bootstrap-transition.js"}
    %script{:src => "/javascript/bootstrap-alert.js"}
    %script{:src => "/javascript/bootstrap-modal.js"}
    %script{:src => "/javascript/bootstrap-dropdown.js"}
    %script{:src => "/javascript/bootstrap-scrollspy.js"}
    %script{:src => "/javascript/bootstrap-tab.js"}
    %script{:src => "/javascript/bootstrap-tooltip.js"}
    %script{:src => "/javascript/bootstrap-popover.js"}
    %script{:src => "/javascript/bootstrap-button.js"}
    %script{:src => "/javascript/bootstrap-collapse.js"}
    %script{:src => "/javascript/bootstrap-carousel.js"}
    %script{:src => "/javascript/bootstrap-typeahead.js"}